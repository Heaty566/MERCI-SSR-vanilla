{
        "name": "kit",
        "version": "1.0.0",
        "main": "index.ts",
        "engines": {
                "node": "12.20.1"
        },
        "scripts": {
                "start": "NODE_ENV=production  ts-node index.ts",
                "start:dev": "NODE_ENV=development  nodemon --exec ts-node index.ts",
                "build": "tsc",
                "prebuild": "rm -rf dist/*",
                "test": "NODE_ENV=test  jest",
                "test:watch": "NODE_ENV=test  jest  --watchAll --runInBand --detectOpenHandles",
                "test:cov": "NODE_ENV=test  jest --coverage --runInBand --detectOpenHandles"
        },
        "author": "",
        "license": "ISC",
        "husky": {
                "hooks": {
                        "pre-commit": "pretty-quick --staged",
                        "pre-push": "npm run test"
                }
        },
        "devDependencies": {
                "@types/compression": "^1.7.0",
                "@types/connect-mongodb-session": "0.0.4",
                "@types/cors": "^2.8.8",
                "@types/dotenv": "^8.2.0",
                "@types/express": "^4.17.8",
                "@types/express-session": "^1.17.0",
                "@types/helmet": "^4.0.0",
                "@types/jest": "^26.0.15",
                "@types/mongodb": "^3.5.31",
                "@types/mongodb-uri": "^0.9.0",
                "@types/morgan": "^1.9.1",
                "@types/node": "^14.14.5",
                "@types/winston": "^2.4.4",
                "husky": "^1.0.0-rc.15",
                "jest": "^26.6.1",
                "nodemon": "^2.0.6",
                "prettier": "^2.1.2",
                "pretty-quick": "^3.1.0",
                "supertest": "^5.0.0",
                "ts-jest": "^26.4.3",
                "ts-node": "^9.0.0",
                "tslint": "^5.12.1",
                "typescript": "^4.0.5"
        },
        "dependencies": {
                "compression": "^1.7.4",
                "connect-mongodb-session": "^2.4.1",
                "cors": "^2.8.5",
                "dotenv": "^8.2.0",
                "ejs": "^3.1.5",
                "express": "^4.17.1",
                "express-session": "^1.17.1",
                "helmet": "^4.1.1",
                "mongodb": "^3.6.2",
                "mongodb-uri": "^0.9.7",
                "morgan": "^1.10.0",
                "winston": "^3.3.3"
